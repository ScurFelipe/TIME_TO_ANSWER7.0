<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"> Perguntas </h1>
  </div>
</div>

<div class= "table-resposive">
  <table class= "table table-stripped table-bordered table-hove">
    <thead>
      <tr>  
        <th>#</th>
        <th><%= translate_attribute(@questions, :description) %></th>
        <th><%= translate_attribute(@questions, :subject ) %></th>
        <th>
          <%= link_to new_admins_backoffice_question_path, class:"btn btn-circle btn-outline-success" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    
    <tbody>
      <% @questions.each do |question| %>
        <tr>  
          <td><%= question.id %></td>
          <td><%= question.description %></td>
          <!---<td><%= question.description.truncate(50) %> Abreviação com três pontos no final </td>--->
          <td><%= question.subject.description %></td>
          <td style="display: flex;justify-content: right;">
            <%= button_to edit_admins_backoffice_question_path(question), method: :get, class:"btn btn-circle btn-outline-info" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= button_to admins_backoffice_question_path(question), method: :delete, class:"btn btn-circle btn-outline-danger", data: { confirm:"Deseja realmente excluir?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @questions %>
</div>