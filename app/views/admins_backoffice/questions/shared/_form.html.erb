<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">  <%= action_message %> </h1>
  </div>
</div>

<% if @question.errors.any? %>
  <div class="alert alert-danger alert-primary alert-dismissible fade show" role="alert">
    <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>

<div class="card mb-4">
  <div class="card-header">
      <%= "#{action_message} Pergunta"  %> 
  </div>
  <div class="card-body">
    <%= form_with(model: [ :admins_backoffice, @question ], local: true) do |form| %>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class:"form-control", placeholder:"Pergunta", rows: 5 %>
      </div>

      <div class="form-group">
        <%= form.label :subject %>
        <%= form.collection_select(:subject_id, @subjects, :id, :description, { }, { class:"form-control" }) %>
      </div>

      <button type="submit" class="btn btn-outline-success">Save</button>

    <% end %>
  </div>
</div>