<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">  <%= action_message %> </h1>
  </div>
</div>

<% if @subject.errors.any? %>
  <div class="alert alert-danger alert-primary alert-dismissible fade show" role="alert">
    <ul>
      <% @subject.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>

<div class="card mb-4">
  <div class="card-header">
      <%= "#{action_message} Assunto/Área"  %> 
  </div>
  <div class="card-body">
    <%= form_with(model: [ :admins_backoffice, @subject ], local: true) do |form| %>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_field :description, class:"form-control", placeholder:"Assunnto/Área"%>
      </div>

      <button type="submit" class="btn btn-outline-success">Save</button>

    <% end %>
  </div>
</div>