<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"> Administradores </h1>
  </div>
</div>

<div class= "table-resposive">
  <table class= "table table-stripped table-bordered table-hove">
    <thead>
      <tr>  
        <th>#</th>
        <th>Email</th>
        <th>
          <%= link_to new_admins_backoffice_admin_path, class:"btn btn-circle btn-outline-success" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    
    <tbody>
      <% @admins.each do |admin| %>
        <tr>  
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td style="width: 110px">
            <%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-circle btn-outline-info" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <a href="#" class="btn btn-circle btn-outline-danger">
              <i class="fa fa-trash"></i>
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>