<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"> Editando </h1>
  </div>
</div>

<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-primary alert-dismissible fade show" role="alert">
    <ul>
      <% @admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<% end %>

<div class="card mb-4">
  <div class="card-header">
      Editar
  </div>
  <div class="card-body">
    <%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>

      <div class="form-group">
        <%= form.label :email%>
        <%= form.text_field :email, class:"form-control", placeholder:"Email"%>
      </div>

      <div class="form-group">
        <%= form.label :password%>
        <%= form.password_field :password, class:"form-control", placeholder:"Senha"%>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation%>
        <%= form.password_field :password_confirmation, class:"form-control", placeholder:"ConfirmaÃ§Ã£o da senha"%>
      </div>
      
      <button type="submit" class="btn btn-outline-success">Save</button>

    <% end %>
  </div>
</div>